# Production Environment Variables for CycleConnect Backend
# Copy this file to .env and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cycleconnect?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-replace-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-replace-this-in-production

# CORS
CLIENT_URL=https://your-frontend-domain.vercel.app

# Socket.IO
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# Optional: Email configuration (for future features)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: File upload configuration (for future features)  
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
