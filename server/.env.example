# Environment Variables
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/cycleconnect
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email service (configure with your email provider)
SENDGRID_API_KEY=your-sendgrid-key
FROM_EMAIL=noreply@cycleconnect.com

# File upload (configure if using AWS S3)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_BUCKET_NAME=cycleconnect-uploads
AWS_REGION=us-east-1

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000
